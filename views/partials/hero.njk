{% import "/views/macros/button.njk" as button %}
{% import "/views/macros/asset.njk" as asset %}

<div class="hero {{partial.class}}">
    <div class="hero__content container">
        {% if partial.title %}
            <h1 class="hero__content__title">
                {{partial.title}}
            </h1>
        {% endif %}
        {% if partial.body %}
            <div class="hero__content__body">
                {{partial.body}}
            </div>
        {% endif %}
        {% if partial.buttons %}
            <div class="hero__content__buttons">
                {% for item in partial.buttons %}
                    {{button.button(item)}}
                {% endfor %}
            </div>
        {% endif %}
    </div>

    {{asset.asset(partial.image)}}
</div>